<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.biin.biin.MainActivity"
    android:overScrollMode="never">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tvRecomended"
            android:text="@string/Recomended"
            android:textAllCaps="true"
            style="@style/MainViewLabel"
            android:textColor="@color/colorWhite"
            android:background="@color/colorLightGrey"
            android:textSize="12dp"
            android:layout_alignParentStart="true" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:id="@+id/hlRecomended"
            android:gravity="center"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/tvRecomended"
            android:layout_marginTop="-16dp"
            android:background="@color/colorLightGrey">

        </LinearLayout>

        <com.biin.biin.CardView.SnappingRecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rvRecomended"
            android:orientation="horizontal"
            tools:listitem="@layout/bnelement_item"
            app:layoutManager="android.support.v7.widget.LinearLayoutManager"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignLeft="@+id/tvRecomended"
            android:layout_alignRight="@+id/tvRecomended"
            android:layout_below="@+id/hlRecomended"
            android:overScrollMode="never">

        </com.biin.biin.CardView.SnappingRecyclerView>

        <TextView
            android:id="@+id/tvNearYou"
            android:text="@string/NearYou"
            android:textAllCaps="true"
            style="@style/MainViewLabel"
            android:textColor="@color/colorWhite"
            android:background="@color/colorDarkGrey"
            android:textSize="12dp"
            android:layout_below="@+id/rvRecomended"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignLeft="@+id/tvRecomended"
            android:layout_alignRight="@+id/tvRecomended" />

        <ImageView
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:id="@+id/ivNearYou"
            android:layout_alignParentTop="false"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/tvNearYou"
            android:layout_alignBottom="@+id/tvNearYou"
            android:layout_alignRight="@+id/tvNearYou"
            android:src="@drawable/right_arrow"
            android:scaleType="fitCenter"
            android:layout_alignParentRight="true" />

        <com.biin.biin.CardView.CardRecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rvNearYou"
            android:orientation="horizontal"
            tools:listitem="@layout/bnsite_item"
            app:layoutManager="android.support.v7.widget.LinearLayoutManager"
            android:layout_below="@+id/tvNearYou"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignRight="@+id/tvRecomended"
            android:layout_alignLeft="@+id/tvRecomended"
            android:overScrollMode="never">

        </com.biin.biin.CardView.CardRecyclerView>

        <TextView
            android:id="@+id/tvFavouritePlaces"
            android:text="@string/FavoritePlaces"
            android:textAllCaps="true"
            style="@style/MainViewLabel"
            android:textColor="@color/colorWhite"
            android:background="@color/colorDarkGrey"
            android:textSize="12dp"
            android:layout_below="@+id/rvNearYou"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignLeft="@+id/tvRecomended"
            android:layout_alignRight="@+id/tvRecomended" />

        <ImageView
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:id="@+id/ivFavouritePlaces"
            android:layout_alignParentTop="false"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/tvFavouritePlaces"
            android:layout_alignBottom="@+id/tvFavouritePlaces"
            android:layout_alignRight="@+id/tvFavouritePlaces"
            android:src="@drawable/right_arrow"
            android:scaleType="fitCenter"
            android:layout_alignParentRight="true" />

        <com.biin.biin.CardView.CardRecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rvFavouritePlaces"
            android:orientation="horizontal"
            tools:listitem="@layout/bnsite_item"
            app:layoutManager="android.support.v7.widget.LinearLayoutManager"
            android:layout_below="@+id/tvFavouritePlaces"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignRight="@+id/tvRecomended"
            android:layout_alignLeft="@+id/tvRecomended"
            android:overScrollMode="never">

        </com.biin.biin.CardView.CardRecyclerView>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/rvFavouritePlaces"
            android:layout_alignLeft="@+id/tvRecomended"
            android:layout_alignRight="@+id/tvRecomended"
            android:id="@+id/vlCategories"
            android:gravity="top"></LinearLayout>

    </RelativeLayout>

</android.support.v4.widget.NestedScrollView>
