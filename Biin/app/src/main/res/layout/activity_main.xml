<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.biin.biin.MainActivity"
    android:overScrollMode="never">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tvRecomended"
            android:text="@string/Recomended"
            android:textAllCaps="true"
            style="@style/MainViewLabel"
            android:textColor="@color/colorWhite"
            android:background="@color/colorDarkGrey"
            android:textSize="12dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true" />

        <com.biin.biin.CardView.SnappingRecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rvRecomended"
            android:orientation="horizontal"
            tools:listitem="@layout/bnelement_item"
            app:layoutManager="android.support.v7.widget.LinearLayoutManager"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignLeft="@+id/tvRecomended"
            android:layout_alignRight="@+id/tvRecomended"
            android:layout_below="@+id/tvRecomended"
            android:overScrollMode="never">

        </com.biin.biin.CardView.SnappingRecyclerView>

        <TextView
            android:id="@+id/tvNearYou"
            android:text="@string/NearYou"
            android:textAllCaps="true"
            style="@style/MainViewLabel"
            android:textColor="@color/colorWhite"
            android:background="@color/colorDarkGrey"
            android:textSize="12dp"
            android:layout_below="@+id/rvRecomended"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignLeft="@+id/tvRecomended"
            android:layout_alignRight="@+id/tvRecomended" />

        <com.biin.biin.CardView.CardRecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rvNearYou"
            android:orientation="horizontal"
            tools:listitem="@layout/bnsite_item"
            app:layoutManager="android.support.v7.widget.LinearLayoutManager"
            android:layout_below="@+id/tvNearYou"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignRight="@+id/tvRecomended"
            android:layout_alignLeft="@+id/tvRecomended"
            android:overScrollMode="never">

        </com.biin.biin.CardView.CardRecyclerView>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/rvNearYou"
            android:layout_alignLeft="@+id/tvRecomended"
            android:layout_alignRight="@+id/tvRecomended"
            android:id="@+id/vlCategories"
            android:gravity="top"></LinearLayout>

    </RelativeLayout>

</android.support.v4.widget.NestedScrollView>
