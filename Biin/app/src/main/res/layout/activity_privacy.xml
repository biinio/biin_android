<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.biin.biin.PrivacyActivity"
    android:background="@color/colorWhite">

    <ImageView
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:id="@+id/ivPrivacyBack"
        android:src="@drawable/left_arrow"
        android:background="@color/colorOrange"
        android:scaleType="center" />

    <TextView
        android:id="@+id/tvPrivacyTitle"
        android:text="@string/PrivacyPolicy"
        android:textAllCaps="true"
        android:textColor="@color/colorDarkGrey"
        android:background="@color/colorAccent"
        android:textSize="12sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/ivPrivacyBack"
        android:layout_alignBottom="@+id/ivPrivacyBack"
        android:layout_alignTop="@+id/ivPrivacyBack"
        android:gravity="center"
        android:layout_toLeftOf="@+id/ivPrivacyBack" />

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView"
        android:layout_below="@+id/ivPrivacyBack"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/tvPrivacyContinue">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/colorWhite"
            android:layout_below="@+id/ivPrivacyBack"
            android:layout_alignParentStart="true">

            <WebView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/wvPrivacy"
                android:layout_gravity="center_horizontal"
                android:layout_below="@+id/ivPrivacyBack"
                android:layout_alignParentStart="true"
                android:background="@color/colorWhite" />

            <!--TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/Accept"
                android:id="@+id/tvPrivacyContinue"
                android:gravity="center"
                android:padding="12dp"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:textColor="@color/colorWhite"
                android:background="@color/colorOrange"
                android:layout_marginTop="6dp"
                android:textStyle="bold"
                android:layout_marginBottom="12dp"
                android:visibility="gone" /-->

        </LinearLayout>

    </ScrollView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/Accept"
        android:id="@+id/tvPrivacyContinue"
        android:gravity="center"
        android:padding="12dp"
        android:textColor="@color/colorWhite"
        android:background="@color/colorOrange"
        android:textStyle="bold"
        android:visibility="gone"
        android:layout_alignParentBottom="true"
        android:layout_margin="6dp" />

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pbPrivacyLoading"
        android:layout_below="@+id/ivPrivacyBack"
        android:layout_alignParentTop="false"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/tvPrivacyTitle"
        android:indeterminate="true"
        android:indeterminateTint="@color/colorOrange"
        android:indeterminateTintMode="src_in" />

</RelativeLayout>
