<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/cvSite">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/rlElement"
        android:layout_alignParentStart="true"
        android:background="@color/colorGreen">

        <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ivSite"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="0dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp"
        android:layout_alignParentRight="true"
        android:layout_centerHorizontal="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:background="@color/colorWhite" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/ivSite"
            android:layout_alignBottom="@+id/ivSite">

            <ProgressBar
                style="?android:attr/progressBarStyleLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/pbSite"
                android:visibility="gone"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:indeterminate="true"
                android:indeterminateOnly="false"
                android:progressTint="@color/colorGreen" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@color/colorGreen"
            android:layout_below="@+id/ivSite"
            android:layout_alignParentStart="true"
            android:id="@+id/rlSiteLabel"
            android:layout_alignParentEnd="true"
            android:layout_alignLeft="@+id/ivSite"
            android:layout_alignRight="@+id/ivSite">

            <ImageView
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:id="@+id/ivSiteOrganization"
                android:scaleType="fitXY"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                android:layout_margin="6dp"
                android:background="@color/colorWhite" />

            <ProgressBar
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:id="@+id/pbSiteOrganization"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                android:visibility="gone"
                android:layout_margin="6dp"
                android:indeterminate="true"
                android:progressTint="@color/colorGreen" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toEndOf="@+id/ivSiteOrganization"
                android:layout_alignBottom="@+id/ivSiteOrganization"
                android:layout_alignTop="@+id/ivSiteOrganization"
                android:layout_marginRight="6dp"
                android:weightSum="3">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Title"
                    android:id="@+id/tvSiteTitle"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:textColor="#ffffff"
                    android:textSize="16dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Location"
                    android:id="@+id/tvSiteLocation"
                    android:gravity="center_vertical"
                    android:textColor="#ffffff"
                    android:textSize="12dp"
                    android:layout_weight="1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Subtitle"
                    android:id="@+id/tvSiteSubtitle"
                    android:gravity="center_vertical"
                    android:textColor="#ffffff"
                    android:textSize="12dp"
                    android:layout_weight="1" />

            </LinearLayout>

        </RelativeLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>