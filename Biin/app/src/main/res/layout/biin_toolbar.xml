<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorAccent">

    <ImageView
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:id="@+id/ivToolbarBack"
        android:src="@drawable/left_arrow"
        android:background="@color/colorGreen"
        android:scaleType="center" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/ivToolbarBack"
        android:layout_alignParentTop="true"
        android:id="@+id/vlToolbarLikes">

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:id="@+id/ivToolbarLike"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/ivToolbarBack"
            android:src="@drawable/like_small"
            android:scaleType="fitXY"
            android:tint="@color/colorLightGrey"
            android:layout_marginLeft="6dp"
            android:background="@drawable/bg_feedback" />

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:id="@+id/ivToolbarLiked"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/ivToolbarBack"
            android:src="@drawable/liked_small"
            android:scaleType="fitXY"
            android:visibility="gone"
            android:tint="@color/colorLightGrey"
            android:layout_marginLeft="6dp"
            android:background="@drawable/bg_feedback" />

    </LinearLayout>

    <ImageView
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:id="@+id/ivToolbarShare"
        android:src="@drawable/share"
        android:scaleType="fitXY"
        android:tint="@color/colorLightGrey"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@id/vlToolbarLikes"
        android:cropToPadding="false"
        android:padding="6dp"
        android:layout_marginLeft="6dp"
        android:background="@drawable/bg_feedback" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:id="@+id/tvToolbarMore"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:gravity="center"
        android:text="@string/MoreFrom"
        android:textColor="@color/colorLightGrey"
        android:layout_marginRight="6dp"
        android:visibility="gone"
        android:textSize="12sp"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:background="@drawable/bg_feedback" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:gravity="center_vertical|end|right"
        android:layout_alignParentTop="true">

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:id="@+id/ivToolbarPosition"
            android:scaleType="fitXY"
            android:src="@drawable/gps"
            android:padding="6dp"
            android:cropToPadding="false"
            android:tint="@color/colorLightGrey"
            android:layout_marginRight="6dp"
            android:visibility="gone"
            android:background="@drawable/bg_feedback" />

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:id="@+id/ivToolbarCall"
            android:scaleType="fitXY"
            android:src="@drawable/call"
            android:padding="6dp"
            android:cropToPadding="false"
            android:tint="@color/colorLightGrey"
            android:layout_marginRight="6dp"
            android:visibility="gone"
            android:background="@drawable/bg_feedback" />

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:id="@+id/ivToolbarMail"
            android:scaleType="fitXY"
            android:src="@drawable/send"
            android:padding="6dp"
            android:cropToPadding="false"
            android:tint="@color/colorLightGrey"
            android:layout_marginRight="6dp"
            android:visibility="gone"
            android:background="@drawable/bg_feedback" />

    </LinearLayout>

</RelativeLayout>