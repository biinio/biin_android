<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorDarkGrey"
    android:paddingTop="8dp"
    android:paddingBottom="8dp">

    <ImageView
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:id="@+id/ivToolbarBack"
        android:src="@drawable/left_arrow"
        android:background="@color/colorPrimaryDark"
        android:scaleType="fitXY"
        android:padding="4dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/ivToolbarBack"
        android:layout_alignParentTop="true"
        android:id="@+id/hlToolbarLikes"
        android:visibility="gone">

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:id="@+id/ivToolbarLike"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/ivToolbarBack"
            android:src="@drawable/like_empty"
            android:scaleType="fitXY"
            android:tint="@color/colorWhite"
            android:layout_marginLeft="6dp"
            android:background="@drawable/bg_feedback"
            android:padding="12dp" />

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:id="@+id/ivToolbarLiked"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/ivToolbarBack"
            android:src="@drawable/like_filled"
            android:scaleType="fitXY"
            android:visibility="gone"
            android:tint="@color/colorWhite"
            android:layout_marginLeft="6dp"
            android:background="@drawable/bg_feedback"
            android:padding="12dp" />

    </LinearLayout>

    <ImageView
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:id="@+id/ivToolbarShare"
        android:src="@drawable/share"
        android:scaleType="fitXY"
        android:tint="@color/colorWhite"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@id/hlToolbarLikes"
        android:cropToPadding="false"
        android:padding="12dp"
        android:layout_marginLeft="6dp"
        android:background="@drawable/bg_feedback"
        android:visibility="gone" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:id="@+id/tvToolbarMore"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:gravity="center"
        android:text="@string/MoreFrom"
        android:textColor="@color/colorWhite"
        android:layout_marginRight="6dp"
        android:visibility="gone"
        android:textSize="12sp"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:background="@drawable/bg_feedback"
        android:layout_alignBottom="@+id/ivToolbarBack" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:gravity="center_vertical|end|right"
        android:layout_alignParentTop="true"
        android:id="@+id/linearLayout3">

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:id="@+id/ivToolbarPosition"
            android:scaleType="fitXY"
            android:src="@drawable/gps"
            android:padding="12dp"
            android:cropToPadding="false"
            android:tint="@color/colorWhite"
            android:visibility="gone"
            android:background="@drawable/bg_feedback" />

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:id="@+id/ivToolbarCall"
            android:scaleType="fitXY"
            android:src="@drawable/call"
            android:padding="12dp"
            android:cropToPadding="false"
            android:tint="@color/colorWhite"
            android:visibility="gone"
            android:background="@drawable/bg_feedback" />

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:id="@+id/ivToolbarMail"
            android:scaleType="fitXY"
            android:src="@drawable/send"
            android:padding="12dp"
            android:cropToPadding="false"
            android:tint="@color/colorWhite"
            android:visibility="gone"
            android:background="@drawable/bg_feedback" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvToolbarTitle"
        android:layout_alignBottom="@+id/ivToolbarBack"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/ivToolbarBack"
        android:textColor="@color/colorWhite"
        android:gravity="center"
        android:ellipsize="marquee"
        android:singleLine="true"
        android:marqueeRepeatLimit="marquee_forever"
        android:scrollHorizontally="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:freezesText="true"
        android:maxLines="1"
        android:layout_alignTop="@+id/ivToolbarBack"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:textSize="18dp"
        android:visibility="gone" />

</RelativeLayout>