<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rlCategoryList"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvCategoryName"
        android:text="@string/category1"
        android:textAllCaps="true"
        style="@style/MainViewLabel"
        android:textColor="@color/colorWhite"
        android:background="@color/colorLightGrey"
        android:textSize="12dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="48dp"
        android:layout_height="wrap_content"
        android:id="@+id/ivCategoryName"
        android:layout_alignParentTop="false"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/tvCategoryName"
        android:layout_alignBottom="@+id/tvCategoryName"
        android:layout_alignRight="@+id/tvCategoryName"
        android:src="@drawable/right_arrow"
        android:scaleType="center"
        android:layout_alignParentRight="true" />

    <com.biin.biin.Components.CardRecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rvCategoryList"
        android:orientation="horizontal"
        tools:listitem="@layout/bncategory_item"
        app:layoutManager="android.support.v7.widget.LinearLayoutManager"
        android:layout_below="@+id/tvCategoryName"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@+id/tvCategoryName"
        android:layout_alignRight="@+id/tvCategoryName"
        android:overScrollMode="never">

    </com.biin.biin.Components.CardRecyclerView>

</RelativeLayout>