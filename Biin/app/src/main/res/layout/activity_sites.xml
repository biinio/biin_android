<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.biin.biin.SitesActivity">

    <include
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        layout="@layout/biin_toolbar"
        android:id="@+id/sites_toolbar"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <com.biin.biin.Components.BNScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:overScrollMode="never"
        android:layout_below="@+id/sites_toolbar"
        android:id="@+id/nvSites">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <include
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                layout="@layout/bnsite_item"
                android:id="@+id/include_bnsite" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:id="@+id/vlSiteShowcases"
                android:layout_below="@+id/include_bnsite"></LinearLayout>

            <TextView
                android:id="@+id/tvSitesNearYou"
                android:text="@string/OtherPlaces1"
                android:textAllCaps="true"
                style="@style/MainViewLabel"
                android:textColor="@color/colorWhite"
                android:background="@color/colorDarkGrey"
                android:textSize="12sp"
                android:visibility="gone" />

            <com.biin.biin.Components.CardRecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rvSitesNearYou"
                android:orientation="horizontal"
                tools:listitem="@layout/bnsite_item_small"
                app:layoutManager="android.support.v7.widget.LinearLayoutManager"
                android:overScrollMode="never"
                android:visibility="gone">

            </com.biin.biin.Components.CardRecyclerView>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/flNpsInclude"
                android:visibility="gone">

                <include
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    layout="@layout/site_nps" />

            </FrameLayout>

        </LinearLayout>

    </com.biin.biin.Components.BNScrollView>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black_alpha_80"
        android:id="@+id/vlMapSitesScreen"
        android:gravity="bottom"
        android:padding="6dp"
        android:layout_alignParentTop="true"
        android:visibility="gone" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/vlMapSitesInclude"
        android:gravity="bottom"
        android:padding="6dp"
        android:layout_alignParentTop="true"
        android:visibility="gone">

        <include
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            layout="@layout/bnsites_map" />

    </LinearLayout>

</RelativeLayout>
