<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.biin.biin.SitesActivity">

    <include
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        layout="@layout/biin_toolbar"
        android:id="@+id/sites_toolbar"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:overScrollMode="never"
        android:layout_below="@+id/sites_toolbar"
        android:id="@+id/nvSites">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <include
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                layout="@layout/bnsite_item"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:id="@+id/include_bnsite" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:id="@+id/vlSiteShowcases"
                android:layout_below="@+id/include_bnsite"></LinearLayout>

            <TextView
                android:id="@+id/tvSitesNearYou"
                android:text="@string/OtherPlaces1"
                android:textAllCaps="true"
                style="@style/MainViewLabel"
                android:textColor="@color/colorWhite"
                android:background="@color/colorDarkGrey"
                android:textSize="12dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/vlSiteShowcases"
                android:visibility="gone" />

            <com.biin.biin.CardView.CardRecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rvSitesNearYou"
                android:orientation="horizontal"
                tools:listitem="@layout/bnsite_item_small"
                app:layoutManager="android.support.v7.widget.LinearLayoutManager"
                android:layout_below="@+id/tvSitesNearYou"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:overScrollMode="never"
                android:visibility="gone">

            </com.biin.biin.CardView.CardRecyclerView>

        </RelativeLayout>

    </android.support.v4.widget.NestedScrollView>

</RelativeLayout>
