<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="40dp"
    android:layout_marginRight="40dp"
    android:id="@+id/cvPopUp">
    
    <RelativeLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ShareGiftTitle"
            android:id="@+id/tvPopUpTitle"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:textStyle="bold"
            android:gravity="center_horizontal"
            android:textSize="18sp" />
    
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ShareGiftMessage"
            android:id="@+id/tvPopUpMessage"
            android:layout_below="@+id/tvPopUpTitle"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:gravity="center_horizontal"
            android:textSize="16sp" />
    
        <FrameLayout
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignTop="@+id/ivPopupClose"
            android:layout_alignEnd="@+id/ivPopupClose"
            android:layout_alignBottom="@+id/ivPopupClose"
            android:layout_alignStart="@+id/ivPopupClose"
            android:background="#ff0000"
            android:id="@+id/flClosePopup1">
    
        </FrameLayout>
    
        <FrameLayout
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignTop="@+id/ivPopupClose"
            android:layout_alignEnd="@+id/ivPopupClose"
            android:layout_alignBottom="@+id/ivPopupClose"
            android:layout_alignParentStart="true"
            android:layout_margin="10dp"
            android:background="@color/colorWhite" />
    
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/ivPopupClose"
            android:layout_below="@+id/tvPopUpMessage"
            android:layout_alignParentStart="true"
            android:src="@drawable/close"
            android:padding="6dp" />
    
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OK"
            android:id="@+id/tvPopupConfirm"
            android:layout_alignTop="@+id/flClosePopup1"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@+id/flClosePopup1"
            android:layout_alignBottom="@+id/flClosePopup1"
            android:gravity="center"
            android:textColor="@color/colorWhite"
            android:textStyle="bold"
            android:background="@color/colorAccent"
            android:textSize="18sp" />
    
    </RelativeLayout>
    
</android.support.v7.widget.CardView>