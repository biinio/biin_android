<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/colorDarkGrey">

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cvGiftItem"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="1dp">

        <com.chauthai.swipereveallayout.SwipeRevealLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/swipeGift"
            app:mode="normal"
            app:dragEdge="right">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <RelativeLayout
                    android:layout_width="96dp"
                    android:layout_height="wrap_content"
                    android:gravity="right">

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="128dp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:id="@+id/space3"
                        android:layout_marginBottom="18dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Text"
                        android:id="@+id/tvGiftDummy"
                        android:gravity="center"
                        android:textColor="@color/colorWhite"
                        android:background="@color/colorGreen"
                        android:layout_below="@+id/space3"
                        android:layout_alignStart="@+id/space3"
                        android:visibility="invisible"
                        android:padding="12dp" />

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignStart="@+id/space3"
                        android:layout_alignTop="@+id/space3"
                        android:layout_alignBottom="@+id/tvGiftDummy"
                        android:weightSum="3">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/ivGiftDelete"
                            android:layout_weight="1"
                            android:background="@drawable/bg_feedback_red"
                            android:tint="@color/colorWhite"
                            android:src="@drawable/delete"
                            android:scaleType="center" />

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/ivGiftShare"
                            android:layout_weight="1"
                            android:background="@drawable/bg_feedback_dark_gray"
                            android:src="@drawable/gift_share"
                            android:tint="@color/colorWhite"
                            android:scaleType="center" />

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/ivGiftStores"
                            android:layout_weight="1"
                            android:background="@drawable/bg_feedback_gray"
                            android:src="@drawable/gift_stores"
                            android:scaleType="center"
                            android:tint="@color/colorWhite" />
                    </LinearLayout>

                </RelativeLayout>

            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_below="@+id/rlGiftItem"
                    android:padding="6dp"
                    android:layout_alignParentStart="true"
                    android:background="@color/colorWhite">

                    <ImageView
                        android:layout_width="128dp"
                        android:layout_height="128dp"
                        android:id="@+id/ivGiftImage"
                        android:layout_marginRight="6dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/SENT"
                        android:id="@+id/tvRequestGift"
                        android:gravity="center"
                        android:padding="12dp"
                        android:textColor="@color/colorWhite"
                        android:background="@color/colorGreen"
                        android:layout_marginTop="6dp"
                        android:layout_below="@+id/ivGiftImage"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentEnd="true" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tvGiftDate"
                        android:layout_alignTop="@+id/ivGiftImage"
                        android:layout_toEndOf="@+id/ivGiftImage"
                        android:textAllCaps="true"
                        android:textSize="10sp"
                        android:textColor="@color/colorPrimary" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tvGiftName"
                        android:layout_below="@+id/tvGiftDate"
                        android:layout_alignEnd="@+id/tvRequestGift"
                        android:layout_toEndOf="@+id/ivGiftImage"
                        android:textColor="@color/colorGreen"
                        android:textStyle="bold"
                        android:textSize="26sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tvGiftDetails"
                        android:layout_below="@+id/tvGiftName"
                        android:layout_alignEnd="@+id/tvGiftName"
                        android:layout_toEndOf="@+id/ivGiftImage"
                        android:layout_above="@+id/tvRequestGift" />

                </RelativeLayout>

            </FrameLayout>

        </com.chauthai.swipereveallayout.SwipeRevealLayout>

    </android.support.v7.widget.CardView>

</FrameLayout>