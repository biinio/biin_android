<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/rlBeaconAlert"
    android:layout_gravity="center_horizontal"
    android:background="@color/colorDarkGrey"
    android:layout_alignParentStart="true"
    android:layout_alignParentEnd="true"
    android:visibility="gone">

    <ImageView
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:id="@+id/ivBeaconOrganization"
        android:scaleType="fitXY"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_margin="6dp"
        android:background="@color/colorWhite" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toEndOf="@+id/ivBeaconOrganization"
        android:layout_alignBottom="@+id/ivBeaconOrganization"
        android:layout_alignTop="@+id/ivBeaconOrganization"
        android:layout_marginRight="6dp"
        android:weightSum="3">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Title"
            android:id="@+id/tvBeaconTitle"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:textColor="#ffffff"
            android:textSize="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Location"
            android:id="@+id/tvBeaconLocation"
            android:gravity="center_vertical"
            android:textColor="#ffffff"
            android:textSize="12dp"
            android:layout_weight="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Subtitle"
            android:id="@+id/tvBeaconSubtitle"
            android:gravity="center_vertical"
            android:textColor="#ffffff"
            android:textSize="12dp"
            android:layout_weight="1" />

    </LinearLayout>

</RelativeLayout>